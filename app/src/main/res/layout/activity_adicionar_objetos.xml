<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adicionarObjetos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza2"
    android:windowSoftInputMode="adjustNothing"
    tools:context=".AdicionarObjetos"
    tools:ignore="LabelFor">

    <ImageView
        android:id="@+id/adicionarObjetos_screenBack"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/screen_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/adicionarObjetos_background"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/adicionarObjetos_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_transparente"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verde2"
        android:contentInsetStart="0dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/adicionarObjetos_voltar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_back_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/adicionarObjetos_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:fontFamily="@font/regular"
                android:text="@string/addObj"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/addimg_back"
                android:paddingBottom="30dp">

                <RelativeLayout
                    android:id="@+id/adicionarObjetos_imagem_fundo"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/addimg_borda_cinza"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/adicionarObjetos_imagem"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:contentDescription="@string/addImg"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/addimg_ptg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/adicionarObjetos_linear_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="70dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/regular"
                    android:text="@string/objLan"
                    android:textAlignment="center"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/adicionarObjetos_linear"
                    app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_linear"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_imagem_fundo" />


                <LinearLayout
                    android:id="@+id/adicionarObjetos_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_linear_top">

                    <ImageView
                        android:id="@+id/adicionarObjetos_lingua_pt"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:contentDescription="@string/pt"
                        android:src="@drawable/flag_pt" />

                    <ImageView
                        android:id="@+id/adicionarObjetos_lingua_en"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:contentDescription="@string/en"
                        android:src="@drawable/flag_us" />

                    <ImageView
                        android:id="@+id/adicionarObjetos_lingua_es"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:contentDescription="@string/es"
                        android:src="@drawable/flag_es" />

                </LinearLayout>

                <TextView
                    android:id="@+id/adicionarObjetos_input_nome_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/regular"
                    android:labelFor="@id/adicionarObjetos_input_nome"
                    android:text="@string/objName"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_input_nome"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_linear" />


                <EditText
                    android:id="@+id/adicionarObjetos_input_nome"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_shape"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="@string/objNameEx"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/preto"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_input_nome_top" />

                <TextView
                    android:id="@+id/adicionarObjetos_input_descricao_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/regular"
                    android:labelFor="@id/adicionarObjetos_input_descricao"
                    android:text="@string/objDesc"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_input_descricao"
                    app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_input_descricao" />

                <EditText
                    android:id="@+id/adicionarObjetos_input_descricao"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/input_shape"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="@string/objDescriptionEx"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/preto"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_input_nome" />

                <TextView
                    android:id="@+id/adicionarObjetos_input_categoria_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/regular"
                    android:labelFor="@id/adicionarObjetos_input_categoria"
                    android:text="@string/objCat"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_input_categoria"
                    app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_input_categoria" />

                <EditText
                    android:id="@+id/adicionarObjetos_input_categoria"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/input_shape"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="@string/objCat"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/preto"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_input_descricao" />

                <TextView
                    android:id="@+id/adicionarObjetos_input_data_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/regular"
                    android:labelFor="@id/adicionarObjetos_input_data"
                    android:text="@string/objDate"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_input_data"
                    app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_input_data" />


                <TextView
                    android:id="@+id/adicionarObjetos_input_data"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/input_shape"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:gravity="center_vertical"
                    android:hint="@string/objDateEx"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/preto"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_input_categoria" />

                <TextView
                    android:id="@+id/adicionarObjetos_input_valor_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/regular"
                    android:labelFor="@id/adicionarObjetos_valor"
                    android:text="@string/objValue"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_valor"
                    app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_valor" />


                <EditText
                    android:id="@+id/adicionarObjetos_valor"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/input_shape"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="@string/objValueEx"
                    android:inputType="numberDecimal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/preto"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_input_data" />

                <TextView
                    android:id="@+id/adicionarObjetos_input_local_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/regular"
                    android:labelFor="@id/adicionarObjetos_local"
                    android:text="@string/objPlace"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_local"
                    app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_local" />


                <EditText
                    android:id="@+id/adicionarObjetos_local"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/input_shape"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="@string/objPlaceDesc"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/preto"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_valor" />

                <TextView
                    android:id="@+id/adicionarObjetos_input_descricaoImg_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/regular"
                    android:labelFor="@id/adicionarObjetos_descricaoImg"
                    android:text="@string/objImgDesc"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_descricaoImg"
                    app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_descricaoImg" />


                <EditText
                    android:id="@+id/adicionarObjetos_descricaoImg"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/input_shape"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="@string/objImgDesc"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/preto"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_local" />

                <TextView
                    android:id="@+id/adicionarObjetos_input_valorSentimental_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/regular"
                    android:labelFor="@id/adicionarObjetos_valorSentimental"
                    android:text="@string/objSValue"
                    android:textColor="@color/preto"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_valorSentimental"
                    app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_valorSentimental" />


                <EditText
                    android:id="@+id/adicionarObjetos_valorSentimental"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/input_shape"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="@string/objSValueEx"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/preto"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_descricaoImg" />

                <Button
                    android:id="@+id/adicionarObjetos_botao"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/add_button"
                    android:contentDescription="@string/add"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_valorSentimental" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>