<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    android:windowSoftInputMode="adjustNothing"
    tools:context=".AdicionarObjetos">

    <ImageView
        android:id="@+id/adicionarObjetos_screenBack"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/screen_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/adicionarObjetos_background" />

    <ImageView
        android:id="@+id/adicionarObjetos_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_transparente"
        android:scaleType="centerCrop" />


    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/verde2"
        android:contentInsetStart="0dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/adicionarObjetos_voltar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_back_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/adicionarObjetos_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:fontFamily="@font/regular"
                android:text="@string/addObj"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/addimg_back">

            <RelativeLayout
                android:id="@+id/adicionarObjetos_imagem_fundo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/addimg_borda_cinza"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/adicionarObjetos_imagem"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/addimg_ptg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>

            <TextView
                android:id="@+id/adicionarObjetos_input_nome_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/objName"
                android:textColor="@color/preto"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_input_nome"
                app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_input_nome" />


            <EditText
                android:id="@+id/adicionarObjetos_input_nome"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input_shape"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="@string/objNameEx"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/preto"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_imagem_fundo" />

            <TextView
                android:id="@+id/adicionarObjetos_input_categoria_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/objCat"
                android:textColor="@color/preto"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_input_categoria"
                app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_input_categoria" />


            <EditText
                android:id="@+id/adicionarObjetos_input_categoria"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/input_shape"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="@string/objCat"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/preto"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_input_nome" />

            <TextView
                android:id="@+id/adicionarObjetos_input_data_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/objDate"
                android:textColor="@color/preto"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_input_data"
                app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_input_data" />


            <EditText
                android:id="@+id/adicionarObjetos_input_data"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/input_shape"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="@string/objDateEx"
                android:inputType="date"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/preto"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_input_categoria" />

            <TextView
                android:id="@+id/adicionarObjetos_input_valor_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/objValue"
                android:textColor="@color/preto"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_valor"
                app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_valor" />


            <EditText
                android:id="@+id/adicionarObjetos_valor"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/input_shape"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="@string/objValueEx"
                android:inputType="numberDecimal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/preto"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_input_data" />

            <TextView
                android:id="@+id/adicionarObjetos_input_local_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/objPlace"
                android:textColor="@color/preto"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_local"
                app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_local" />


            <EditText
                android:id="@+id/adicionarObjetos_local"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/input_shape"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="@string/objPlaceDesc"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/preto"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_valor" />

            <TextView
                android:id="@+id/adicionarObjetos_input_descricaoImg_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/objImgDesc"
                android:textColor="@color/preto"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_descricaoImg"
                app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_descricaoImg" />


            <EditText
                android:id="@+id/adicionarObjetos_descricaoImg"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/input_shape"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="@string/objImgDesc"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/preto"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_local" />

            <TextView
                android:id="@+id/adicionarObjetos_input_valorSentimental_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/objSValue"
                android:textColor="@color/preto"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/adicionarObjetos_valorSentimental"
                app:layout_constraintStart_toStartOf="@+id/adicionarObjetos_valorSentimental" />


            <EditText
                android:id="@+id/adicionarObjetos_valorSentimental"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/input_shape"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="@string/objSValueEx"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/preto"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_descricaoImg" />

            <Button
                android:id="@+id/adicionarObjetos_botao"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/add_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_valorSentimental" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adicionarObjetos_botao" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>