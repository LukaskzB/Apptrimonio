<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_perfil_conquista_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/preto"
    android:paddingHorizontal="25dp"
    android:paddingTop="25dp">

    <ImageView
        android:id="@+id/item_perfil_conquista_imagem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:src="@drawable/add_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_perfil_conquista_titulo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:text="@string/objName"
        android:textColor="@color/preto"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_perfil_conquista_imagem"
        app:layout_constraintStart_toStartOf="@+id/item_perfil_conquista_imagem"
        app:layout_constraintTop_toBottomOf="@+id/item_perfil_conquista_imagem" />

</androidx.constraintlayout.widget.ConstraintLayout>